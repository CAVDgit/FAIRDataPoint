{
    "swagger": "2.0",
    "info": {
        "version": "0.2",
        "title": "FAIR Data Point Service",
        "description": "Provides metadata about the FAIR Data Point (FDP) itself, data catalogs and data sets available via the FDP.",
        "contact": {
            "name": "Netherlands eScience Center",
            "url": "https://www.esciencecenter.nl",
            "email": "a.kuzniar@esciencecenter.nl"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "schemes": [
        "http"
    ],
    "basePath": "/",
    "produces": [
        "text/turtle",
        "text/n3",
        "application/rdf+xml",
        "application/ld+json"
    ],
    "paths": {
        "/fdp": {
            "get": {
                "summary": "FDP metadata",
                "description": "This endpoint returns information about the FDP itself.",
                "responses": {
                    "200": {
                        "schema": {
                            "type": "string"
                        },
                        "description": "Success"
                    }
                }
            }
        },
        "/catalog/{catalogID}": {
            "get": {
                "summary": "Catalog metadata",
                "description": "This endpoint returns a curated collection of metadata about data sets in a catalog available via the FDP.",
                "parameters": [
                    {
                        "name": "catalogID",
                        "in": "path",
                        "description": "catalogID",
                        "type": "string",
                        "default": "catalog-01",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "type": "string"
                        },
                        "description": "Success"
                    }
                }
            }
        },
        "/dataset/{datasetID}": {
            "get": {
                "summary": "Data set metadata",
                "description": "This endpoint returns information about a data set available via the FDP.",
                "parameters": [
                    {
                        "name": "datasetID",
                        "in": "path",
                        "description": "datasetID",
                        "type": "string",
                        "default": "breedb",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "type": "string"
                        },
                        "description": "Success"
                    }
                }
            }
        }
    }
}