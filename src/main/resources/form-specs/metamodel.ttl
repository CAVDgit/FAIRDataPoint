@prefix :         <http://fairdatapoint.org/> .
@prefix sh:       <http://www.w3.org/ns/shacl#> .
@prefix dcat:     <http://www.w3.org/ns/dcat#> .
@prefix dct:      <http://purl.org/dc/terms/> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf:     <http://xmlns.com/foaf/0.1/> .
@prefix r3d:      <http://www.re3data.org/schema/3-0#> .

:ResourceShape a sh:NodeShape ;
  sh:targetClass dcat:Resource ;
  sh:property [
    sh:path dct:title ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount  1 ;
  ], [
    sh:path dct:description ;
    sh:nodeKind sh:Literal ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:hasVersion ;
    sh:name "version" ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:language ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:license ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:rights ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:issued ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
  ], [
    sh:path dct:modified ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
  ] .

:RepositoryShape a sh:NodeShape ;
  sh:targetClass r3d:Repository ;
  sh:property [
      sh:path r3d:startDate ;
      sh:datatype xsd:date ;
      sh:maxCount 1 ;
    ] ,
    [
      sh:path r3d:lastUpdate ;
      sh:datatype xsd:date ;
      sh:maxCount 1 ;
    ] ,
    [
      sh:path r3d:institution ;
      sh:class r3d:Institution ;
      sh:maxCount 1 ;
    ] ,
    [
      sh:path r3d:institutionCountry ;
      sh:nodeKind sh:IRI ;
      sh:maxCount 1 ;
    ] .

:CatalogShape a sh:NodeShape ;
  sh:targetClass dcat:Catalog ;
  sh:property [
      sh:path dct:isPartOf ;
      sh:nodeKind sh:IRI ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
    ],
    [
      sh:path foaf:homePage ;
      sh:maxCount 1 ;
    ],
    [
      sh:path dcat:themeTaxonomy ;
      sh:nodeKind sh:IRI ;
    ] .

:DatasetShape a sh:NodeShape ;
  sh:targetClass dcat:Dataset ;
  sh:property [
      sh:path dct:isPartOf ;
      sh:nodeKind sh:IRI ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
    ],
    [
      sh:path dcat:landingPage ;
      sh:nodeKind sh:IRI ;
      sh:maxCount 1 ;
    ],
    [
      sh:path dcat:theme ;
       sh:nodeKind sh:IRI ;
    ],
    [
      sh:path dcat:keyword ;
       sh:nodeKind sh:Literal ;
    ],
    [
      sh:path dcat:contactPoint ;
       sh:nodeKind sh:IRI ;
       sh:maxCount 1 ;
    ] .

:DistributionShape a sh:NodeShape ;
  sh:targetClass dcat:Distribution ;
  sh:property [
      sh:path dct:isPartOf ;
      sh:nodeKind sh:IRI ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
    ],
    [
      sh:path dcat:accessURL ;
      sh:nodeKind sh:IRI ;
      sh:maxCount 1 ;
    ],
    [
      sh:path dcat:downloadURL ;
      sh:nodeKind sh:IRI ;
      sh:maxCount 1 ;
    ],
    [
      sh:path dcat:mediaType ;
      sh:nodeKind sh:Literal ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
    ],
    [
      sh:path dcat:format ;
      sh:nodeKind sh:Literal ;
      sh:maxCount 1 ;
    ],
    [
      sh:path dcat:byteSize ;
      sh:nodeKind sh:Literal ;
      sh:maxCount 1 ;
    ] .

