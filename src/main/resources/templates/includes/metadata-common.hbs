    }}
{{/if}}

{{!-- Language --}}
{{# if metadata.language}}
    {{> includes/metadata-item
            metadata-item-key="Language"
            metadata-item-value=(simplifyUrl metadata.language)
            metadata-item-link=metadata.language
    }}
{{/if}}

{{!-- Publisher --}}
{{# if metadata.publisher}}
    {{> includes/metadata-item
            metadata-item-key="Publisher"
            metadata-item-value=(literal metadata.publisher.name)
            metadata-item-link=metadata.publisher.uri
    }}
{{/if}}

