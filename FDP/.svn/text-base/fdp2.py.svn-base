#!/usr/bin/env python

from flask import Flask

app = Flask(__name__)

@app.route('/')
def index():
   return '<h1>This is the FAIR Data Point homepage!</h1>'

@app.route('/fdp')
def fdp():
   return 'FAIRDataPointMetadata'

@app.route('/fdp/catalog')
def catalog():
   return 'CatalogMetadata'

@app.route('/fdp/catalog/<dataset_id>')
def dataset(dataset_id):
   return 'This is dataset {id}'.format(id=dataset_id)

if __name__ == '__main__':
   app.run(host='localhost', port=8080, debug=True)
